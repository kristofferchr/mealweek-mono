
    server {
        listen 80;

        error_log  /var/log/nginx/error.log debug;
        access_log   /var/log/nginx/access.log  combined;

         location  /api {
             proxy_pass ${BACKEND_HOST};
             rewrite ^/api(/.*)$ $1 break;
             proxy_http_version 1.1;
         }

        location / {
            root /app/static;
            try_files $uri /index.html;
        }
    }
